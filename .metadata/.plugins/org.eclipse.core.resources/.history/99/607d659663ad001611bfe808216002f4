package problemOftheDay;

import java.util.ArrayList;

public class MaximumSubArr {

	public static ArrayList<Integer> subArr(ArrayList<Integer> arr)
	{	
		ArrayList<Integer> test=new ArrayList<>(),result=null;
		int i=0,prevsum=0,sum=0;
		while(i<arr.size())
		{
			if(arr.get(i)>=0)
			{
				test.add(arr.get(i));
				i++;
				sum+=arr.get(i);
			}
			else
			{
				if(sum>prevsum)
				{
					result=test;
					prevsum=sum;
					test=new ArrayList<>();
					sum=0;
				}
				else if(sum==prevsum)
				{
					if(result==null)
					{
						result=test;
						prevsum=sum;
						test=new ArrayList<>();
						sum=0;
					}
					
					else if(result.size()>test.size())
					{
						result=test;
						prevsum=sum;
						test=new ArrayList<>();
						sum=0;
					}
					
				}
				i=i+2;
			}
		}
		if(arr.get(0)>arr.get(arr.size()-1))
		{
			arr.remove(arr.size()-1);
		}
		else
		{
			arr.remove(0);
		}
		return arr;
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int arr1[]={1,28};
		int arr2[]={10,11,98,34,2,0,75,47,41,97,22};
		int arr3[]={20,88,89,42,35,65,50,42,59,86,92,97,91,42,27,85,97,63,94,55,57};
		ArrayList<Integer> test=new ArrayList<>(),result;
		for(int i=0;i<arr1.length;i++)
		{
			test.add(arr1[i]);
		}
		result=subArr(test);
		for(Integer a:result)
		{
			System.out.print(a+" ");
		}
		System.out.println();
		test=new ArrayList<>();
		for(int i=0;i<arr2.length;i++)
		{
			test.add(arr2[i]);
		}
		result=subArr(test);
		for(Integer a:result)
		{
			System.out.print(a+" ");
		}
		System.out.println();
		test=new ArrayList<>();
		for(int i=0;i<arr3.length;i++)
		{
			test.add(arr3[i]);
		}
		result=subArr(test);
		for(Integer a:result)
		{
			System.out.print(a+" ");
		}
	}

}
