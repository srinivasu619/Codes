package com.Assignment;
import java.util.*;
public class Main {
	public static HashMap<Integer, Integer> map=new HashMap<>();
	public Main() {
		map.put(0, 0);
		map.put(1, 1);
		map.put(2, 2);
	}
	public static int recurranceRelation(int number)
	{
		for(int i=3;i<=number;i++)
		{
			int first=map.get((i-1));
			int second=map.get(i-3);
			int term=2*first+3*second;
			map.put(i, term);
		}
		return map.get(number);
	}
	public static void main(String args[]) {
		// Write your code here
        /*Scanner sc=new Scanner(System.in);
        int N=sc.nextInt();
        int arr[]=new int[N];
        for(int i=0;i<N;i++)
        {
            arr[i]=sc.nextInt();
        }*/
		System.out.println(recurranceRelation(3));
		System.out.println(recurranceRelation(4));
		System.out.println(recurranceRelation(5));
		System.out.println(recurranceRelation(6));
		System.out.println(recurranceRelation(7));
        
	}
}
